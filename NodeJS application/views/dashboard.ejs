<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Food Ordering System</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- For DataTable -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
        <link rel="stylesheet" href="Styles/style.css">
    </head>
    <body>
        <%- include('layouts/header'); -%>
        <div class="content-wrapper">
            <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-4">
                    <h4 class="card-title"></h4> 
                </div>
            </div>
            <%- include('layouts/navigation'); -%>
            <div>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title font-17">Todays Order</h4>
                            <table id="example" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th> Order Time </th>
                                        <th> Order Details </th>
                                        <th> Order Total </th>
                                        <th> Order Status</th>
                                        <!-- <th> Options </th> -->
                                    </tr>
                                    
                                </thead>
                                <tbody  id="items">
                                    <% orders.forEach(function(order) { %> 
                                        <tr>
                                         <td><%= order.time %></td>
                                         <td><%= order.details %></td>
                                         <td><%= order.total %></td>
                                         <% if(order.status == "done") { %>
                                            <td><%= order.status %><div class='progress'><div class='progress-bar bg-success progress-bar-striped' role='progressbar' style='width: 100%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100'></div></div></td>
                                         <% } %>
                                         <% if(order.status == "started") { %>
                                            <td><%= order.status %><div class='progress'><div class='progress-bar bg-warning progress-bar-striped' role='progressbar' style='width: 100%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100'></div></div></td>
                                         <% } %>  
                                         <% if(order.status == "not started") { %>
                                            <td><%= order.status %><div class='progress'><div class='progress-bar bg-danger progress-bar-striped' role='progressbar' style='width: 100%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100'></div></div"></td>
                                         <% } %>   
                                       </tr>
                                       <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="JavaScript/sampledata.js"></script>           
    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.js"></script>
</html>
